<?xml version="1.0"?>
<!--This form's filename should be normalized to basic.xml after installing it to Briefcase's Storage Directory-->
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>basic</h:title>
    <model>
      <instance>
        <basic id="basic">
          <test/>
          <meta>
            <instanceID/>
          </meta>
        </basic>
      </instance>
      <bind nodeset="/basic/test" type="select1"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/basic/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <select1 ref="/basic/test">
      <label>does this work?</label>
      <item>
        <label>yes</label>
        <value>yes</value>
      </item>
      <item>
        <label>no</label>
        <value>no</value>
      </item>
    </select1>
  </h:body>
</h:html>